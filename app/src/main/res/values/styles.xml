<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowActionBar">false</item>
    </style>

    <style name="AppThemeWhite" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryDark">@android:color/white</item>
        <item name="colorAccent">@android:color/white</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@android:color/white</item>

    </style>

    <style name="Theme.EditText" parent="Base.Widget.AppCompat.EditText">
        <item name="colorControlNormal">@color/colorPrimaryDark</item>
        <item name="colorControlActivated">@android:color/white</item>
        <item name="colorSwitchThumbNormal">@color/colorPrimaryDark</item>
    </style>

    <!-- Keypos TabLayout theme -->
    <style name="TM_Theme.TabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabPaddingStart">12dp</item>
        <item name="tabPaddingEnd">12dp</item>
        <item name="tabTextAppearance">@style/TM_Theme.TabLayout.Text</item>
    </style>

    <style name="TM_Theme.TabLayout.Text" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">12sp</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="date_picker" parent="@android:style/Widget.Holo.DatePicker">
        <item name="android:textColor">@android:color/white</item>

    </style>

</resources>
